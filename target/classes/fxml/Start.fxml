<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.miracosta.cs112.finalproject.finalproject.controller.StartController"
      alignment="CENTER" spacing="20">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <ImageView fitWidth="350" preserveRatio="true">
        <image><Image url="@../images/logo.png"/></image>
    </ImageView>

    <Button text="New Game"  onAction="#onNew"/>
    <Button text="Exit"      onAction="#onExit"/>
</VBox>
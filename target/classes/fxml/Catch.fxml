<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.miracosta.cs112.finalproject.finalproject.controller.CatchController"
      alignment="CENTER" spacing="15" prefWidth="400" prefHeight="400">

    <ImageView fx:id="fishImage" fitHeight="200" preserveRatio="true"/>
    <Label fx:id="speciesLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="weightLabel"/>
    <Label fx:id="descLabel" wrapText="true" maxWidth="300"/>

    <VBox spacing="10">
        <Button text="Play Again" onAction="#onRestart"/>
        <Button text="Exit" onAction="#onExit"/>
    </VBox>
</VBox>